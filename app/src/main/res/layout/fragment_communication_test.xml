<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".interview_fragments.CommunicationTestFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/assessment_icon"
            android:drawablePadding="5dp"
            android:drawableTint="@color/upperBlue"
            android:text="Communication Test"
            android:textColor="@color/upperBlue"
            android:textSize="18sp"
            android:textStyle="bold" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/warningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:lineSpacingMultiplier="1.2"
            android:text="Caution : Don't switch this screen otherwise Recording will be stopped &amp; saved And when you resume this screen, Recording will be started again"
            android:textColor="@color/red_btn_bg_color"
            android:textSize="17sp"
            android:textStyle="normal" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:lineSpacingMultiplier="1.2"
            android:text="Time Left - 30 : 00"
            android:textColor="@color/red_btn_bg_color"
            android:textSize="17sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cameraCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp">



            <androidx.camera.view.PreviewView
                android:id="@+id/preview"
                android:layout_width="match_parent"
                app:scaleType="fillCenter"
                android:layout_height="250dp" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="250dp"
                android:visibility="gone" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <Chronometer
                    android:id="@+id/recordingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:textColor="@color/parrotGreen"
                    android:textSize="17sp" />

            </androidx.cardview.widget.CardView>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/stopRecordingBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:shapeAppearance="@style/circleShape"
                android:background="@color/white"
                android:visibility="gone"
                android:src="@drawable/stop_recording_icon"
                android:layout_marginBottom="20dp"
                android:layout_gravity="bottom|center_horizontal" />



        </androidx.cardview.widget.CardView>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/communicationQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Please Wait..."
            android:textColor="@color/black45"
            android:textSize="18sp" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box"
            android:hint="Write answer"
            android:inputType="textMultiLine"
            android:minHeight="50dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:textColor="@color/black45"
            android:textCursorDrawable="@drawable/form_cursor"
            android:textSize="15sp"
            android:textStyle="normal" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/videoCard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="210dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/clear_icon"
                    app:tint="@color/black" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/doc_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:foreground="@drawable/box"
                    android:padding="2dp"
                    android:src="@drawable/video_file_icon"
                    android:tint="@color/upperBlue" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/doc_title"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/doc_image"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/doc_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doc_title"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/doc_image"
                    android:text="Mp4"
                    android:textAllCaps="true" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/doc_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doc_type"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/doc_image" />

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectVideoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Select Video"
            android:visibility="gone"
            app:cornerRadius="10dp"
            app:icon="@drawable/video_icon" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:backgroundTint="@color/red_btn_bg_color"
            android:text="Submit Test"
            app:cornerRadius="10dp"
            app:icon="@drawable/check_circle" />

        <!--
            <com.jkcarino.rtexteditorview.RTextEditorView
                android:id="@+id/editor_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/toolbar_line"
                android:layout_alignParentTop="true" />
        -->

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>