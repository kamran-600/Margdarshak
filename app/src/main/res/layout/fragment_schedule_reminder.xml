<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".interview_fragments.ScheduleReminderFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/time_icon"
            android:drawablePadding="5dp"
            android:drawableTint="@color/upperBlue"
            android:text="Schedule Notification"
            android:textSize="18sp"
            android:textColor="@color/upperBlue"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageCard"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box"
            android:drawableStart="@drawable/description"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black45"
            android:hint="Task Name"
            android:inputType="textShortMessage"
            android:minHeight="50dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textColor="@color/black45"
            android:textCursorDrawable="@drawable/form_cursor"
            android:textSize="15sp"
            android:textStyle="normal" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageCard"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box"
            android:drawableStart="@drawable/description"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black45"
            android:hint="Task"
            android:inputType="textMultiLine"
            android:minHeight="50dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textColor="@color/black45"
            android:textCursorDrawable="@drawable/form_cursor"
            android:textSize="15sp"
            android:textStyle="normal" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageCard"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box"
            android:drawableStart="@drawable/description"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black45"
            android:hint="Reminder Interval in Minutes"
            android:inputType="number"
            android:minHeight="50dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textColor="@color/black45"
            android:textCursorDrawable="@drawable/form_cursor"
            android:textSize="15sp"
            android:textStyle="normal" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reminder_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageCard"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box"
            android:drawableStart="@drawable/description"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black45"
            android:hint="Reminder Count"
            android:inputType="number"
            android:minHeight="50dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textColor="@color/black45"
            android:textCursorDrawable="@drawable/form_cursor"
            android:textSize="15sp"
            android:textStyle="normal" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/pinCodeLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box"
            android:drawableEnd="@drawable/calendar"
            android:focusable="false"
            android:cursorVisible="false"
            android:hint="Schedule Date"
            android:inputType="none"
            android:paddingHorizontal="15dp"
            android:textColor="@color/black45"
            android:textSize="15sp" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:cursorVisible="false"
            android:background="@drawable/box"
            android:drawableEnd="@drawable/time_icon"
            android:focusable="false"
            android:hint="Schedule Time"
            android:inputType="none"
            android:paddingHorizontal="15dp"
            android:textColor="@color/black45"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scheduleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#A64BAF50"
            android:layout_marginStart="15dp"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Schedule"
            app:icon="@drawable/time_icon"
            app:cornerRadius="10dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>